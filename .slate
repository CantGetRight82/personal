# Slate configuration file
# Be sure to customize! See https://github.com/jigish/slate#configuring-slate
 
## Key aliases
alias hyper ctrl;shift;alt;cmd
 
## Application aliases
alias browser   'Safari'
alias editor    'MacVim'
alias terminal  'Terminal'
alias finder	'Finder'

 
## Position aliases
alias full         move screenOriginX;screenOriginY                screenSizeX;screenSizeY
alias top	move screenOriginX;screenOriginY screenSizeX;screenSizeY/2
alias bottom	move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2
alias lefthalf     move screenOriginX;screenOriginY                screenSizeX/2;screenSizeY
alias righthalf    move screenOriginX+screenSizeX/2;screenOriginY  screenSizeX/2;screenSizeY
alias topleft      corner top-left                                 resize:screenSizeX/2;screenSizeY/2
alias topright     corner top-right                                resize:screenSizeX/2;screenSizeY/2
alias bottomleft   corner bottom-left                              resize:screenSizeX/2;screenSizeY/2
alias bottomright  corner bottom-right                             resize:screenSizeX/2;screenSizeY/2

alias grid1	move screenOriginX;screenOriginY	screenSizeX/3;screenSizeY/3
alias grid2	move screenOriginX+screenSizeX/3;screenOriginY	screenSizeX/3;screenSizeY/3
alias grid3	move screenOriginX+screenSizeX/1.5;screenOriginY	screenSizeX/3;screenSizeY/3

alias dgrid1	move screenOriginX;screenOriginY	screenSizeX/3;screenSizeY/1.5
alias dgrid2	move screenOriginX+screenSizeX/3;screenOriginY	screenSizeX/3;screenSizeY/1.5
alias dgrid3	move screenOriginX+screenSizeX/1.5;screenOriginY	screenSizeX/3;screenSizeY/1.5

alias tgrid1	move screenOriginX;screenOriginY	screenSizeX/3;screenSizeY
alias tgrid2	move screenOriginX+screenSizeX/3;screenOriginY	screenSizeX/3;screenSizeY
alias tgrid3	move screenOriginX+screenSizeX/1.5;screenOriginY	screenSizeX/3;screenSizeY

alias grid4	move screenOriginX;screenOriginY+screenSizeY/3	screenSizeX/3;screenSizeY/3
alias grid5	move screenOriginX+screenSizeX/3;screenOriginY+screenSizeY/3	screenSizeX/3;screenSizeY/3
alias grid6	move screenOriginX+screenSizeX/1.5;screenOriginY+screenSizeY/3	screenSizeX/3;screenSizeY/3

alias grid7	move screenOriginX;screenOriginY+screenSizeY/1.5	screenSizeX/3;screenSizeY/3
alias grid8	move screenOriginX+screenSizeX/3;screenOriginY+screenSizeY/1.5	screenSizeX/3;screenSizeY/3
alias grid9	move screenOriginX+screenSizeX/1.5;screenOriginY+screenSizeY/1.5	screenSizeX/3;screenSizeY/3


 
##Hints
bind space:${hyper} hint ASDFGHJKLQWERTYUIOPCVBN
 
## Focus Bindings
bind j:${hyper} focus up
bind k:${hyper} focus down
bind h:${hyper} focus left
bind l:${hyper} focus right
 
## Location bindings
# These are laid out to be used with the right hand
# and to complement the focus bindings
bind o:${hyper}  throw next
bind i:${hyper}  ${full}
bind ;:${hyper}  ${lefthalf}
bind ':${hyper}  ${righthalf}
bind u:${hyper}  ${top}
bind n:${hyper}  ${grid1}

bind a:${hyper}  ${topleft}
bind s:${hyper}  ${topright}
bind z:${hyper}  ${bottomleft}
bind x:${hyper}  ${bottomright}
 
bind f13:${hyper}  ${tgrid1}
bind f14:${hyper}  ${tgrid2}
bind f15:${hyper}  ${tgrid3}

bind f16:${hyper}  ${dgrid1}
bind f17:${hyper}  ${dgrid2}
bind f18:${hyper}  ${dgrid3}

bind pad7:${hyper}  ${grid1}
bind pad8:${hyper}  ${grid2}
bind pad9:${hyper}  ${grid3}

bind pad4:${hyper}  ${grid4}
bind pad5:${hyper}  ${grid5}
bind pad6:${hyper}  ${grid6}

bind pad1:${hyper}  ${grid7}
bind pad2:${hyper}  ${grid8}
bind pad3:${hyper}  ${grid9}
